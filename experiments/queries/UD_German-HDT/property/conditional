MATCH (X:Word)
MATCH (Y1:Word)
MATCH (Y2:Word)
MATCH (A:Word)
MATCH (A {lemma: ','})
MATCH (A)-[:SENTENCE_SUCCESSOR]->(X)
MATCH (X)-[:SENTENCE_SUCCESSOR]->(Y1)
MATCH (Y1)-[:SENTENCE_SUCCESSOR]->(Y2)
WHERE X.form in ['angenommen', 'vorausgesetzt', 'unterstellt']
AND not Y1.form in ['dass', 'daß']
AND not Y2.form in ['dass', 'daß']
RETURN X, Y1, Y2, A