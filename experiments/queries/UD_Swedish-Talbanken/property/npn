MATCH (N1:Word)
MATCH (N2:Word)
MATCH (P:Word)
MATCH (N1 {UPOS: 'NOUN'})
MATCH (P {UPOS: 'ADP'})
MATCH (N2 {UPOS: 'NOUN'})
MATCH (N1)-[:SENTENCE_SUCCESSOR]->(P)
MATCH (P)-[:SENTENCE_SUCCESSOR]->(N2)
WHERE N1.LEMMA = N2.LEMMA
AND NOT EXISTS {
    MATCH (X:Word)
    MATCH (N1)-[:DEPREL {deprel: 'case'}]->(X)
    MATCH (X)-[:SENTENCE_SUCCESSOR]->*(N1)
}
AND NOT EXISTS {
    MATCH (X:Word)
    MATCH (X)-[:DEPREL {deprel: 'fixed'}]->(N1)
}
RETURN N1, N2, P