MATCH (N:Word)
MATCH (N2:Word)
MATCH (P:Word)
MATCH (N)-[:XPOS]->(Nx:Xpos)
MATCH (N2)-[:XPOS]->(N2x:Xpos)
MATCH (N)-[:LEMMA]->(:Lemma)<-[:LEMMA]-(N2)
MATCH (N)-[:DEPREL]->(N2)
MATCH (N2)-[:DEPREL {deprel: 'case'}]->(P)
MATCH (N)-[:SENTENCE_SUCCESSOR]->(P)
MATCH (P)-[:SENTENCE_SUCCESSOR]->(N2)
WHERE Nx.value =~"N.*"
AND N2x.value =~"N.*"
AND NOT EXISTS {
    MATCH (N)-[:DEPREL {deprel: 'case'}]->(P2)
    MATCH (P2)-[:SENTENCE_SUCCESSOR]->*(N)
}
RETURN N, N2, P