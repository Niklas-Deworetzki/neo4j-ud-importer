
clean:
	rm -rf UD_Chinese-GSDSimp UD_English-EWT UD_Coptic-Scriptorium UD_French-GSD UD_German-HDT UD_Hebrew-HTB UD_Hindi-HDTB UD_Portuguese-CINTIL UD_Spanish-AnCora UD_Swedish-Talbanken

corpora: UD_Chinese-GSDSimp UD_English-EWT UD_Coptic-Scriptorium UD_French-GSD UD_German-HDT UD_Hebrew-HTB UD_Hindi-HDTB UD_Portuguese-CINTIL UD_Spanish-AnCora UD_Swedish-Talbanken

UD_Chinese-GSDSimp:
	git clone https://github.com/UniversalDependencies/UD_Chinese-GSDSimp.git
	echo "{\"id\": \"UD_Chinese-GSDSimp\", \"config\": \"ud\", \"lang\": \"cz\"}" > UD_Chinese-GSDSimp/corpus.json
	chmod 777 -R UD_Chinese-GSDSimp

